<section id="creative-work">
    <div class="row">
        <div class="col">
            <h1 class="ml-5 my-auto text-xl-left text-md-center section-header">
                <i class="fas fa-palette"></i> Creative Works
            </h1>
        </div>
    </div>

    <div class="row ">
        <% creative.forEach(function (creative) {%>
        <div class="card col-xl-3 col-lg-4 col-md-6 col-sm-12 mx-auto d-flex flex-column justify-content-between
            h-100 <%=creative.visibility%>">
            <div class="card-img-top">
                <a href="<%=creative.hyperlink%>">
                    <img src="<%=creative.artwork%>" alt="<%=creative.name%>" title="<%=creative.name%>"
                        class="img-thumbnail">
                </a>
            </div>

            <div class="card-body">
                <h2 class="card-title"><a href="<%=creative.hyperlink%>" alt="<%=creative.name%>"
                        title="<%=creative.name%>" class="text-dark"><%=creative.name%></a></h2>

                <p class="card-text"><%=creative.description%></p>

            </div>
            <div class="card-footer text-right">
                <a href="<%=creative.hyperlink%>"><button type="button" class="btn btn-sm btn-primary mr-1">View
                        Project</button></a>

                <p class="text-muted text-right date mt-2"><%=creative.date%> - <%=creative.end%></p>
            </div>
        </div>
        <%})%>
    </div>
</section>
